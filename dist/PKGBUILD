pkgname=benthos
pkgver=0.1.0
pkgrel=2
pkgdesc="Benthos Scuba Logbook"
arch=('i686' 'x86_64')
license=('GPL2')
url="http://benthos-log.net"
depends=('boost-libs' 'systemd' 'benthos-logbook' 'benthos-dc' 'qt>=4.8')
optdepends=()
makedepends=('cmake' 'boost')
conflicts=()
replaces=()
backup=()
source=("http://benthos-log.com/files/${pkgname}-${pkgver}.tar.bz2"
	"fix_mapsapi.patch")
md5sums=('cc749730190e72ae572eb4761598d930'
	'9163694ddbf75b0bc087530562e83e2f')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	patch -p1 -i ${srcdir}/fix_mapsapi.patch
	[[ -d build ]] && rm -r build
	mkdir build && cd build
	cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr .. || return 1
	make || return 1
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}/build"
	make DESTDIR="${pkgdir}" install || return 1
}
